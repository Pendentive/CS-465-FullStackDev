<div id="landing-background" class="body-background">

    {{!-- Gallery hero vert partial --}}
    {{#if components.GalleryHeroVert}}
    {{> galleries/gallery-hero-vert 
        images=components.GalleryHeroVert.images 
        padding=components.GalleryHeroVert.padding 
        width=components.GalleryHeroVert.width 
        height=components.GalleryHeroVert.height}}
    {{/if}}

    <div id="landing-page">

        {{!-- Landing page specific content --}}
        <div class="landing-content">
            <div class="landing-page">
                
                {{!-- Type intro partial --}}
                {{#if components.TypeIntro}}
                {{> sections/type-intro 
                    title=components.TypeIntro.title 
                    description=components.TypeIntro.description 
                    leftPadding=components.TypeIntro.leftPadding 
                    width=components.TypeIntro.width 
                    height=components.TypeIntro.height}}
                {{/if}}

                {{!-- Repeater menu partial --}}
                {{#if components.RepeaterMenu}}
                {{> sections/repeater-menu 
                    menuCards=components.RepeaterMenu.menuCards 
                    photoHeight=components.RepeaterMenu.photoHeight 
                    photoWidth=components.RepeaterMenu.photoWidth 
                    photoPaddingX=components.RepeaterMenu.photoPaddingX 
                    photoPaddingY=components.RepeaterMenu.photoPaddingY 
                    menuCardPaddingX=components.RepeaterMenu.menuCardPaddingX}}
                {{/if}}

            </div>
            
        </div>
    </div>

    {{!-- Vertical separator --}}
    <div class="vertical-separator"></div>

    {{!-- Gallery banner partial --}}
    {{#if components.GalleryBanner}}
    {{> galleries/gallery-banner 
        images=components.GalleryBanner.images 
        photoEdgeLength=components.GalleryBanner.photoEdgeLength 
        barHeight=components.GalleryBanner.barHeight}}
    {{/if}}


</div>
